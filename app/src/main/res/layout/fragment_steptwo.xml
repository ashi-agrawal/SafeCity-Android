<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashi.safecityandroid.Fragments.StepTwoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:text="Step 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tvStep2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/holo_purple" />

        <TextView
            android:text="Please fill out the following information."
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvInstructions"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Report Title:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitleBlock"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:layout_weight="0.19" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etTitle"
                android:layout_weight="0.61"
                android:inputType="text" />
        </LinearLayout>

        <TextView
            android:text="Description of Incident:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescriptionBlock"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/etDescription"
            android:minLines="3"
            android:layout_weight="0.20" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Date:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDateBlock"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:id="@+id/etMonth"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="14sp"
                android:textAlignment="center"
                android:hint="mm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="1"
                android:id="@+id/etDay"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="14sp"
                android:textAlignment="center"
                android:hint="dd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:id="@+id/etYear"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="14sp"
                android:textAlignment="center"
                android:hint="yyyy"/>

            <TextView
                android:text="Time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTimeBlock"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="1"
                android:id="@+id/etHour"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="14sp"
                android:textAlignment="center"
                android:hint="00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="1"
                android:id="@+id/etMinute"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="14sp"
                android:textAlignment="center"
                android:hint="00"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="1"
                android:id="@+id/etAM"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="14sp"
                android:textAlignment="center"
                android:hint="AM"/>
        </LinearLayout>

        <TextView
            android:text="Categories of Harassement:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCategories"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginBottom="5dp"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:text="Catcalls/Whistles"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/catcalls" />

                <CheckBox
                    android:text="Ogling/Facial Expressions"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/ogling" />

                <CheckBox
                    android:text="Taking Pictures"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/takingPics" />

                <CheckBox
                    android:text="Indecent Exposure"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/indecent" />

                <CheckBox
                    android:text="Poor/No Street Lighting"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/lighting" />

                <CheckBox
                    android:text="Chain Snatching"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/chain" />

                <CheckBox
                    android:text="LGBT Issue"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/LGBT" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <CheckBox
                    android:text="Commenting"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/commenting" />

                <CheckBox
                    android:text="Stalking"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/stalking" />

                <CheckBox
                    android:text="Touching/Groping"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/touching" />

                <CheckBox
                    android:text="Sexual Invites"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/invites" />

                <CheckBox
                    android:text="Rape/Sexual Assault"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/rape" />

                <CheckBox
                    android:text="Ethnicity"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/ethnicity" />

                <CheckBox
                    android:text="Other"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:id="@+id/other" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>
